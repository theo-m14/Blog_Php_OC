<h1>{{post.title|escape}}</h1>
<p><strong>{{post.caption|escape}}</strong></p>
<p>{{post.content|escape}}</p>
<p>Auteur : {{post.author|escape}}</p>
<p>Date de modification : {{post.date|date("d/m/y")}}</p>


{% for comment in comments %}
    <p>-----------------</p>
    <p>Utilisateur : {{comment.author}}</p>
    <p>{{comment.content}}</p>
    <p>Post√© le {{comment.date|date("d/m/y")}}</p>
    <p>-----------------</p>
{% endfor %}

{% if user %}

<form action="/post/comment/add" method="post">

<textarea name="content" cols="30" rows="10" placeholder="Votre Commentaire"></textarea>
<input type="hidden" name="postId" value="{{post.id}}">
<button type="submit">Envoyer</button>

</form>

{% endif %}

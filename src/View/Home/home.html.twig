<h1>Hello World</h1>
<a href="/blog">Blog</a>
{% if user %}
    <p class="navbar-text">Connecté en tant que {{ user.username|escape }} ({{ user.role|escape }})</p>
    <a class="btn btn-primary" href="/logout">Déconnexion</a>
{% else %}
    <a class="btn btn-primary" href="/login">Connexion</a>
{% endif %}

{% if contactError %}
<p>{{contactError}}</p>
{% endif %}
{% if success %}
<p>{{success}}</p>
{% endif %}

<form action="/sendEmail" method="POST">
<label for="name">Votre Nom</label>
<input type="text" name="name" id="">
<label for="mail">Email de contact</label>
<input type="text" name="email" id="">
<textarea name="textContent" id="" cols="30" rows="10" placeholder="Votre Message"></textarea>
<button type="submit">Envoyer</button>
</form>
